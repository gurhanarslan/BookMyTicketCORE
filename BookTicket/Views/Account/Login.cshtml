@model Login
@{
    ViewData["Title"] = "Register";
}

@section sections{

    <script>

        $(function () {


      

            function myfunction() {

                $("#login").toggleClass("bg-white")
                $("#login").toggleClass("text-danger")
                $("#login").toggleClass("bg-danger")
                $("#login").toggleClass("text-white")

            }

            setInterval(myfunction, 500);

        })

    </script>
}


@if (User.Identity.IsAuthenticated)
{
    <div class="container mt-5">
        <div class="row ">
            <div class="d-none d-md-inline col-lg-4 col-md-3">
                @await Component.InvokeAsync("SliderFirstSlider")
            </div>
            <div class="col-12 col-lg-4 col-md-6">
                <span class="text-white mt-3 ml-5">Hoşgeldiniz, @User.Identity.Name</span>
                <a asp-action="Logout" asp-controller="Account" class=" mx-1 text-white btn btn-primary">Oturumu Kapat</a>
            </div>
            <div class="col-12 col-lg-4 col-md-3">
                @await Component.InvokeAsync("SliderSecondSlider")
            </div>
        </div>
    </div>


}
else
{
    <div class="container mt-5">
        <div class="row ">
            <div class="d-none d-md-inline col-lg-4 col-md-3">
                @await Component.InvokeAsync("SliderFirstSlider")
            </div>
            <div class="col-12 col-lg-4 col-md-6 mt-5">

               @if(ViewBag.returnUrl == "/TicketAdmin/AllMovies")
                {

                <form asp-action="Login" method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>

                    <div class="mt-5 text-center h5 text-danger border rounded bg-white login p-3" id="login"> Admin Page <br /> Girişi placeholder'a göre yapınız. </div>

                    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                    <div class="form-group">

                        <input asp-for="Email" class="form-control bg-transparent mt-5" placeholder="admin@gmail.com" />

                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control mt-3 bg-transparent" type="password" placeholder="Admin123*" />

                    </div>


                    <input type="submit" class="btn btn-primary w-100" value="Login" />
                </form>
                }

                else if (ViewBag.returnUrl != null)
                {



                    <form asp-action="Login" method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>

                        <div class="mt-5 text-center h5 text-danger border rounded bg-white login p-3" id="login"> Devam Edebilmek için Lütfen Giriş Yapınız..! </div>

                        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                        <div class="form-group">

                            <input asp-for="Email" class="form-control bg-transparent mt-5" placeholder="Username" />

                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control mt-3 bg-transparent" type="password" placeholder="Password" />

                        </div>


                        <input type="submit" class="btn btn-primary w-100" value="Login" />
                    </form>
                }

                else
                {
                    <form asp-action="Login" method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>

                        <div class="mt-5 text-center  p-3 h3"> Giriş Yap </div>

                        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                        <div class="form-group">

                            <input asp-for="Email" class="form-control mt-5 bg-transparent" placeholder="Username" />

                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control bg-transparent" type="password" placeholder="Password" />

                        </div>


                        <input type="submit" class="btn btn-primary w-100" value="Login" />
                    </form>
                }

            </div>
            <div class="col-12 col-lg-4 col-md-3">
                @await Component.InvokeAsync("SliderSecondSlider")
            </div>
        </div>
    </div>


}
