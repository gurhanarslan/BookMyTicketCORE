@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row ">
        <div class="d-none d-md-inline col-12 col-lg-4 col-md-3">
            @await Component.InvokeAsync("SliderFirstSlider")
        </div>
        <div class="col-12 col-lg-4 col-md-6">
            <form asp-action="Register" method="POST">

                <div asp-validation-summary="All"></div>

                <div class="form-group text-center mt-10">
                    <strong><h3>Book Ticket Register</h3></strong>
                </div>
                <div class="form-group mt-5">
                    <input asp-for="UserName" placeholder="Username" class="mt-5 rounded bg-transparent form-control">
                </div>
                <div class="form-group">
                    <input asp-for="Password"  placeholder="Password" class="rounded bg-transparent form-control">
                </div>
                <div class="form-group">
                    <input asp-for="Email"  placeholder="E-Mail" class="rounded bg-transparent form-control">
                </div>
                <div class="form-group text-right">
                    <input type="submit" value="Register" class="btn btn-warning w-100">

                </div>
            </form>
        </div>
        <div class="col-12 col-lg-4 col-md-3">
            @await Component.InvokeAsync("SliderSecondSlider")
        </div>
    </div>
</div>

