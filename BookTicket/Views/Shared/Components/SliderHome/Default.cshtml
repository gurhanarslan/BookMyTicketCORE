@model IEnumerable<Movies>

<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a asp-action="MoviesDetails" asp-controller="Home" asp-route-title="Leon">
                <img src="~/img/Leon.jpg" class="d-block w-100" alt="..." />
            </a>
        </div>
        @foreach (var item in Model)
        {
        <div class="carousel-item">
            <a asp-action="MoviesDetails" asp-controller="Home" asp-route-title="@item.MoviesName">
                <img src="~/img/@item.Image" class="d-block w-100" alt="..." />
            </a>
        </div>
        }

    </div>
</div>

