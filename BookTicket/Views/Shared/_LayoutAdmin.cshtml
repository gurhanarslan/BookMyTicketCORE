<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Book Ticket Home</title>
    <link rel="stylesheet" href="~/css/stylebookticket.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Shadows+Into+Light&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Righteous&display=swap" rel="stylesheet">

</head>

<body>
    <nav class="navbar navbar-expand-md sticky-top bg-pink navbar-turq">
        <div class="container">
            <div class="navbar-brand"> <a asp-action="Login" asp-controller="Account" class="nav-link navbar-light">  <strong> Book Ticket Admin </strong></a></div>
            <div class="navbar-toggler" data-toggle="collapse" data-target="#navbarmenu">
                <span class="navbar-toggler-icon"></span>
            </div>

            <div class="collapse navbar-collapse" id="navbarmenu">
                <ul class="navbar-nav">
                    <li class="nav-item"> <a asp-action="Index" asp-controller="TicketAdmin" class="nav-link">Home</a></li>
                    <li class="nav-item"> <a asp-action="AllMovies" asp-controller="TicketAdmin" class="nav-link">All Movies</a></li>
                    <li class="nav-item"> <a asp-action="Movies" asp-controller="TicketAdmin" class="nav-link">Movies</a></li>
                    <li class="nav-item"> <a asp-action="UpComing" asp-controller="TicketAdmin" class="nav-link">Upcoming Movies</a></li>
                    <li class="nav-item"> <a asp-action="UpComing2020" asp-controller="TicketAdmin" class="nav-link">2020 Movies</a></li>
                    <li class="nav-item"> <a asp-action="Slider" asp-controller="TicketAdmin" class="nav-link">Sliders</a></li>
                    <li class="nav-item"> <a asp-action="UserList" asp-controller="TicketAdmin" class="nav-link">User List</a></li>
                   

                </ul>
            </div>
        </div>


    </nav>
    <div class="text-right bg-primary">
        <span class="bg-warning p-3 pb-4 rounded ">
            @if (User.Identity.IsAuthenticated)
            {
                <span class="text-white mt-3 ml-1">Hoşgeldiniz, @User.Identity.Name</span>
                <a asp-action="Logout" asp-controller="Account" class="btn btn-danger mt-2">Oturumu Kapat</a>
            }
            else
            {
                <a asp-action="Login" asp-controller="Account" class="btn btn-primary">Oturum Aç</a>
                <a asp-action="Register" asp-controller="Account" class="btn btn-warning">Kayıt Ol</a>

            }
        </span>
        <span> - </span>
    </div>


    @RenderBody()
</body>
</html>