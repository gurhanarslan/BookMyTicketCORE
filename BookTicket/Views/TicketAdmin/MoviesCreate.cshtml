@model Movies
@{
    ViewData["Title"] = "MoviesCreate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container">
    <div class="row">
        <div class="col-12 col-md-4"></div>       
        <div class="col-12 col-md-4">
            <form asp-action="MoviesCreate" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="MoviesName"> Film Adı </label>
                    <input asp-for="MoviesName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="MoviesDirector"> Film Yönetmeni </label>
                    <input asp-for="MoviesDirector" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="MoviesSeans"> Film Seansları </label>
                    <input asp-for="MoviesSeans" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="MoviesDescription"> Film İçeriği </label>
                    <input asp-for="MoviesDescription" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CategoryName"> Film Özelliği </label>
                    <select asp-for="CategoryName">
                        <option value="" disabled selected>Seçiniz..</option>
                        <option value="Vizyonda">Vizyonda</option>
                        <option value="UpComing">Yakın Tarihte Vizyona Girecek.</option>
                        <option value="UpComing2020">2020 Yılında Vizyona Girecek.</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Category</label>
                    <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                        <option disabled selected value="">Seçiniz</option>

                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="FilmDate"> Film Vizyon Tarihi </label>
                    <input asp-for="FilmDate" class="form-control" />
                </div>
                <div>
                 
                    <input type="text" disabled value="Image kısmı onaylandıktan sonra ekle!" class="form-control" />
                </div>

                <input type="submit" value="Film Oluştur" class="form-control" />
            </form>


        </div>
        <div class="col-12 col-md-4"></div>
    </div>
</div>